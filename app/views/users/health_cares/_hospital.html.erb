<div class="col-xs-8 col-xs-offset-2">
  <h4><%= user.last_name %><%= user.first_name %>さんの数値</h4>
  <% if health_cares.present? %>
    <table class="table">
      <thead>
        <tr>
          <th>日付</th>
          <th>体重</th>
          <th>最高血圧</th>
          <th>最低血圧</th>
          <th>血糖値</th>
        </tr>
      </thead>
      <tbody>
        <% health_cares.each do |health_care| %>
          <tr>
            <td><%= health_care.date.strftime("%Y年%m月%d日") %></td>

            <% if health_care.body_weight.present? %>
              <td><%= health_care.body_weight %></td>
            <% else %>
              <td>-</td>
            <% end %>

            <% if health_care.max_blood_pressure.present? %>
              <td><%= health_care.max_blood_pressure %></td>
            <% else %>
              <td>-</td>
            <% end %>

            <% if health_care.min_blood_pressure.present? %>
              <td><%= health_care.min_blood_pressure %></td>
            <% else %>
              <td>-</td>
            <% end %>

            <% if health_care.blood_sugar.present? %>
              <td><%= health_care.blood_sugar %></td>
            <% else %>
              <td>-</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h5>特にありません</h5>
  <% end %>

  <%= link_to "CSV出力", user_health_cares_path(format: :csv), class: "btn btn-primary" %>
  <%= link_to "患者マイページへ戻る", user_path(user), class: "btn btn-primary" %>
</div>