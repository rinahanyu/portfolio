<div class="container">
  <div class="row">
    <div class="col-lg-9">
      <h2 class="health-header"><b>数値の編集</b></h2>
      <%= render "error", health_care: @health_care %>

        <div class="row">
          <%= form_with model: @health_care, url: user_health_care_path(@health_care), local: true do |f| %>
            <div class="col-xs-6 col-xs-offset-3">
              <!--編集では、今日の日付をデフォルト入力しないため、日付カラムはrenderの外とする-->
              <div class="form-group">
                <%= f.label :date, "日付" %></br>
                <%= raw sprintf(
                  f.date_select(
                    :date,
                    include_blank: true,
                    use_month_numbers: true,
                    start_year: Time.now.year,
                    end_year: 2020,
                    date_separator: "%s"),
                    "年", "月") +"日" %>
              </div>
              <%= render "form", f: f, health_care: @health_care, edit_flag: true %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>