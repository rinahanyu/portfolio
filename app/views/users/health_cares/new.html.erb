<div class="care-new-container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
      <h2 class="hea-header">健康管理の新規登録</h2>

        <div class="row">
          <%= form_with model: @health_care , url: user_health_cares_path(current_user), local: true do |f| %>
            <%= render "layouts/error", model: f.object %>
            <!--新規登録の場合み、今日の日付をデフォルト入力するため、日付カラムはrenderの外とする-->
            <div class="form-group">
              <%= f.label :date, "日付" %><br>
              <%= raw sprintf(
                f.date_select(
                  :date,
                  include_blank: true,
                  use_month_numbers: true,
                  selected: Date.today,
                  start_year: Time.now.year,
                  end_year: 2020,
                  date_separator: "%s"),
                  "年", "月") +"日" %><br>
            </div>
            <%= render "form", f: f, health_care: @health_care  %>
          <% end %>
        </div>
    </div>
  </div>
</div>