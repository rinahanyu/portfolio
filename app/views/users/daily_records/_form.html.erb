<div class="col-xs-4">
  <div class="form-group">
    <!--<%# if item.image.present? %>-->
    <!--  <%#= attachment_image_tag @item, :image, format: "jpeg", size: "250x200", id: "img-edit" %>-->
    <!--<%# end %>-->
    <!--プレビュー機能実装検討-->
    <%= f.attachment_field :daily_image, type: 'file', id: "img-file" %>
  </div>
</div>

<div class="col-xs-6">
  <div class="form-group">
    <%= f.label :theme, "題名" %>
    <%= f.text_field :theme %>
  </div>
  <div class="form-group">
    <%= f.label :introduction, "内容" %>
    <%= f.text_area :introduction, rows: 8 %>
  </div>
  <div class="form-group">
    <%= f.label :genre, "ジャンル" %>
    <%= f.select :genre, DailyRecord.genres.keys, {prompt: "選択してください"} %>
  </div>
  <% if local_assigns[:edit_flag].present? %>
    <p class="text-right"><%= f.submit "変更を保存", class: "btn btn-primary" %></p>
  <% else %>
    <p class="text-right"><%= f.submit "新規登録", class: "btn btn-primary" %></p>
  <% end %>
</div>

