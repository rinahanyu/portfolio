<h2><%= daily_record.user.last_name %>さんの投稿</h2>

  <div class="row">
    <h3><%= daily_record.theme %></h3>

    <div class="col-xs-3">
      <p><%= attachment_image_tag daily_record, :daily_image, format: "jpeg", size: "250x200" %></p>
    </div>

    <div class="col-xs-9">
      <p>＜ジャンル＞<%= daily_record.genre %></p>
      <p><%= daily_record.introduction %></p>
      <p><%= daily_record.created_at.to_s(:datetime_jp) %></p>
      <%= link_to "患者マイページへ戻る", user_path(daily_record.user), class: "btn btn-primary" %>
    </div>
  </div>