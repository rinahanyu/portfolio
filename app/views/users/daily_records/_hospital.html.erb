<h2><%= daily_record.user.last_name %>さんの投稿詳細</h2>

<div class="daily-record-show col-lg-6 col-lg-offset-3">
  <div class="daily-record-content-show">
    <div class="daily-record-show-img">
      <%= attachment_image_tag daily_record, :daily_image, format: "jpeg", size: "250x200" %>
    </div>

    <div class="daily-record-show-main">
      <div>＜ジャンル＞<%= daily_record.genre %></div>
      <div><%= daily_record.theme %></div>
      <div><%= daily_record.introduction %></div>
      <div><%= daily_record.created_at.to_s(:datetime_jp) %></div>
    </div>
  </div>
  <div class="user-return-btn"><%= link_to "患者マイページへ戻る", user_path(daily_record.user), class: "btn btn-success" %></div>
</div>