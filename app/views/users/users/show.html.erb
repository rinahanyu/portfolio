<div class="user-show-container">
  <div class="row">
    <% if current_user.present? %>
      <%= render "user", user: @user, guest_user: @guest_user, daily_records: @daily_records %>
    <% elsif current_hospital.patients?(@user) %>　<!--医療関係者でかかりつけ医登録場合-->
      <%= render "hospital", user: @user, guest_user: @guest_user, daily_records: @daily_records, isRoom: @isRoom, roomId: @roomId, room: @room %>
    <% else %>
      <h2>かかりつけ医の登録がされていない患者です</h2>
    <% end %>
  </div>
</div>

