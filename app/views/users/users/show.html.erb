<div class="container">
  <div class="row">
    <h2>マイページ</h2>
    <div class="col-xs-4">
      <p><%= attachment_image_tag @user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "250x200" %></p>
      <h4><b><%= @user.last_name %><%= @user.first_name %></b></h4>
      <div>
        <span>登録情報</span>
        <%= link_to "編集する", edit_user_path(@user), class: "btn btn-primary" %>
      </div>
    </div>
    <div class="col-xs-8"></div>
  </div>
</div>