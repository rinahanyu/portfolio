<h2><%= user.last_name %><%= user.first_name %>さんのマイページ</h2>
<div class="col-xs-4">
  <p><%= attachment_image_tag user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "250x200" %></p>
  <%= link_to "診療記録の作成", new_user_medical_record_path(user), class: "btn btn-primary" %>
</div>

<div class="col-xs-8">
  <h4>＜日常投稿一覧＞</h4>
  <table class="table">
    <thead>
      <tr>
        <th>投稿日</th>
        <th>題名</th>
        <th>ジャンル</th>
        <th>いいね</th>
      </tr>
    </thead>
    <tbody>
      <% daily_records.each do |daily_record| %>
        <tr>
          <td><%= daily_record.created_at.to_s(:datetime_jp) %></td>
          <td>
            <%= link_to daily_record_path(daily_record) do %>
              <%= daily_record.theme %>
            <% end %>
          </td>
          <td><%= daily_record.genre %></td>
          <td>コメント<%= daily_record.comments.count %>件</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>