<div class="container">
  <div class="row">
    <h4>会員の方はこちらからログイン</h4>
    
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
    
    <div class="user-login-input">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true %>
    </div>
    
    <div class="user-login-input">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    <!--パスワード変更画面での日本語対応ができていないため、コメントアウト-->
    <!--<div class="form-box"><%#= link_to "=> パスワードを忘れた方はこちら", new_user_password_path %></div>-->
      
    <div class="user-login-button"><%= f.submit "ログイン", class: "btn btn-primary" %></div>
    <% end %>
    
  <div class="not-registration">
    <div>
      <h4>登録がお済みでない方</h4>
      <p><%= link_to "こちら", new_user_registration_path %> から新規登録を行ってください。</p>
    </div>
  </div>
  
</div>
