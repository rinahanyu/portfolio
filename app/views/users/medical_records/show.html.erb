<div class="container">
  <div class="row">
    <h2>診療記録詳細</h2>
    <h4>＜患者名＞<%= @user.last_name %><%= @user.first_name %>さん</h4>
    <div class="col-xs-6 col-xs-offset-3">
      <div class="row">
        <table class="table">
          <tbody>
            <tr>
              <th>診察日</th>
              <td><%= @medical_record.examined_on.strftime("%Y年%m月%d日") %></td>
            </tr>
            <tr>
              <th>担当医師</th>
              <td><%= @medical_record.doctor %></td>
            </tr>
            <tr>
              <th>傷病名</th>
              <td><%= @medical_record.disease %></td>
            </tr>
            <tr>
              <th>診察内容</th>
              <td><%= @medical_record.treatment %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div>
        <% if @medical_record.hospital == current_hospital %>
          <%= link_to "編集", edit_user_medical_record_path(@medical_record), class: "btn btn-primary" %>
          <%= link_to "削除", user_medical_record_path(@medical_record), method: :delete, class: "btn btn-danger", data: {confirm: "本当に削除しますか？"} %>
        <% end %>
        <%= link_to "一覧へ戻る", user_medical_records_path(@user), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
