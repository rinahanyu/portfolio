<div class="medical-records-edit-container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
      <h2 class="col text-center">診療記録の編集</h2>
      <h3>＜患者名＞<%= @user.last_name %><%= @user.first_name %>さん</h3>
      <%= render "error", medical_record: @medical_record %>

        <div class="row">
          <%= form_with model: @medical_record , url: user_medical_record_path(@user), local: true do |f| %>
            <!--新規登録の場合み、今日の日付をデフォルト入力するため、日付カラムはrenderの外とする-->
            <div class="form-group">
              <%= f.label :examined_on, "診察日" %></br>
              <%= raw sprintf(
                f.datetime_select(
                  :start_time,
                  include_blank: true,
                  use_month_numbers: true,
                  discard_hour: true,
                  discard_minute: true,
                  selected: Date.today,
                  start_year: Time.now.year,
                  end_year: 2020,
                  date_separator: "%s"),
                  "年", "月",) + "日" %></br>
            </div>
            <%= render "form", f: f, medical_record: @medical_record, edit_flag: true  %>
          <% end %>
        </div>
    </div>
  </div>
</div>