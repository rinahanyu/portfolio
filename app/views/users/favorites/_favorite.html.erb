<% if daily_record.favorited_by?(current_user) %>
  <%= link_to daily_record_favorites_path(daily_record), method: :delete, remote: true do %>
    <span class="fa fa-heart" aria-hidden="true" style="color: red;"></span>
    <%= daily_record.favorites.count %>
  <% end %>
<% else %>
  <%= link_to daily_record_favorites_path(daily_record), method: :post, remote: true do %>
    <span class="fa fa-heart-o" aria-hidden="true"></span>
    <%= daily_record.favorites.count %>
  <% end %>
<% end %>