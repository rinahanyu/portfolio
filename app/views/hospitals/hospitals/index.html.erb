<div class="container">
  <div class="row">
    <h2>医療機関一覧</h2>
      <div class="hospital-search">
        <%= form_with(scope: :search, url: hospitals_search_path, method: :get, local: true) do |f| %>
          <%= f.text_field :content %>
          <%= f.submit "検索" %>
        <% end %>
      </div>

      <div class="hospital-index">
        <%= render "index", hospitals: @hospitals %>
      </div>
  </div>
</div>