<div class="hospital-index-container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1">
      <h2>医療機関一覧</h2>
        <div class="hospital-search">
          <%= form_with(scope: :search, url: hospitals_search_path, method: :get, local: true) do |f| %>
            <%= f.text_field :content %>
            <%= f.submit "検索" %>
          <% end %>
        </div>

        <div class="hospital-index">
          <%= render "index", hospitals: @hospitals %>
        </div>
        <div class="col text-right">
          <%= link_to "戻る", :back, class: "btn btn-success btn-lg" %>
        </div>
    </div>
  </div>
</div>