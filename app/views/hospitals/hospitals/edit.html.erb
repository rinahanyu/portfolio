<div class="container">
  <div class="row">
    <h2>登録情報編集</h2>

    <%= form_with model: @hospital, url: hospital_path(@hospital), local: true do |f| %>
      <%= render "hospitals/shared/error_messages", resource: @hospital %>

  　　<div class="hospital-input">
        <div class="hospital-input-form">
          <%= f.label :name, "医療機関名" %>
         <%= f.text_field :name %>
        </div>

        <div class="hospital-input-form">
          <%= f.label :email, "メールアドレス" %>
         <%= f.email_field :email, type: "email", autocomplete: "email" %>
        </div>

        <div class="hospital-input-form">
          <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
          <%= f.text_field :postal_code %>
        </div>

        <div class="hospital-input-form">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address %>
        </div>

        <div class="hospital-input-form">
          <%= f.label :telphone_number, "電話番号（ハイフンなし）" %>
          <%= f.text_field :telphone_number, type: "tel" %>
        </div>
      </div>

      <div class="hospital-input-button">
        <p><%= f.submit "編集する", class: "btn btn-primary" %></p>
      </div>
    <% end %>
  </div>
</div>